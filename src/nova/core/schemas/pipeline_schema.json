{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nova Pipeline Configuration Schema",
  "description": "Schema for Nova document processor pipeline configuration",
  "type": "object",
  "required": ["pipeline"],
  "additionalProperties": false,
  "properties": {
    "pipeline": {
      "type": "object",
      "required": ["phases"],
      "additionalProperties": false,
      "properties": {
        "paths": {
          "type": "object",
          "properties": {
            "base_dir": { "type": "string" },
            "input_dir": { "type": "string" },
            "output_dir": { "type": "string" },
            "temp_dir": { "type": "string" }
          }
        },
        "components": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "markdown_processor": {
              "type": "object",
              "required": ["parser"],
              "additionalProperties": false,
              "properties": {
                "parser": {
                  "type": "string",
                  "pattern": "^markitdown==\\d+\\.\\d+\\.\\d+[a-z]\\d+$"
                },
                "config": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "document_conversion": { "type": "boolean" },
                    "image_processing": { "type": "boolean" },
                    "metadata_preservation": { "type": "boolean" }
                  }
                }
              }
            }
          }
        },
        "phases": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "object",
                "patternProperties": {
                  "^[A-Z][A-Z0-9_]*$": {
                    "type": "object",
                    "required": ["description", "output_dir", "processor"],
                    "additionalProperties": false,
                    "properties": {
                      "description": { "type": "string" },
                      "output_dir": { "type": "string" },
                      "processor": { "type": "string" },
                      "enabled": { "type": "boolean" },
                      "handlers": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "required": ["type", "base_handler"],
                          "additionalProperties": false,
                          "properties": {
                            "type": { "type": "string" },
                            "base_handler": { "type": "string" },
                            "options": {
                              "type": "object",
                              "additionalProperties": true
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            },
            {
              "type": "object",
              "patternProperties": {
                "^[a-z][a-z0-9_]*$": {
                  "type": "object",
                  "required": ["description", "output_dir", "processor"],
                  "additionalProperties": false,
                  "properties": {
                    "description": { "type": "string" },
                    "output_dir": { "type": "string" },
                    "processor": { "type": "string" },
                    "enabled": { "type": "boolean" },
                    "handlers": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": ["type", "base_handler"],
                        "additionalProperties": false,
                        "properties": {
                          "type": { "type": "string" },
                          "base_handler": { "type": "string" },
                          "options": {
                            "type": "object",
                            "additionalProperties": true
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          ]
        }
      }
    }
  }
} 