{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nova Pipeline Configuration Schema",
  "description": "Schema for Nova document processor pipeline configuration",
  "type": "object",
  "required": ["pipeline"],
  "additionalProperties": false,
  "properties": {
    "pipeline": {
      "type": "object",
      "required": ["phases"],
      "additionalProperties": false,
      "properties": {
        "cache": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Whether caching is enabled"
            },
            "directory": {
              "type": "string",
              "description": "Cache directory path"
            },
            "max_size_mb": {
              "type": "integer",
              "description": "Maximum cache size in MB",
              "minimum": 1,
              "default": 1024
            },
            "max_age_days": {
              "type": "integer",
              "description": "Maximum age of cache files in days",
              "minimum": 1,
              "default": 7
            },
            "cleanup_on_start": {
              "type": "boolean",
              "description": "Whether to clean up cache on start",
              "default": true
            },
            "cleanup_on_error": {
              "type": "boolean",
              "description": "Whether to clean up cache on error",
              "default": true
            }
          },
          "required": ["enabled", "directory"]
        },
        "paths": {
          "type": "object",
          "properties": {
            "base_dir": { "type": "string" },
            "input_dir": { "type": "string" },
            "output_dir": { "type": "string" },
            "temp_dir": { "type": "string" }
          }
        },
        "components": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "markdown_processor": {
              "type": "object",
              "required": ["parser"],
              "additionalProperties": false,
              "properties": {
                "parser": {
                  "type": "string",
                  "pattern": "^markitdown==\\d+\\.\\d+\\.\\d+[a-z]\\d+$"
                },
                "config": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "document_conversion": { "type": "boolean" },
                    "image_processing": { "type": "boolean" },
                    "metadata_preservation": { "type": "boolean" }
                  }
                }
              }
            }
          }
        },
        "phases": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": ["description", "output_dir", "processor"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Phase name"
              },
              "description": {
                "type": "string",
                "description": "Phase description"
              },
              "output_dir": {
                "type": "string",
                "description": "Output directory path"
              },
              "processor": {
                "type": "string",
                "description": "Processor class name"
              },
              "components": {
                "type": "object",
                "description": "Phase-specific component configurations"
              },
              "dependencies": {
                "type": "array",
                "description": "Phase dependencies",
                "items": {
                  "type": "string"
                }
              },
              "timing": {
                "type": "object",
                "description": "Timing configuration"
              },
              "metrics": {
                "type": "object",
                "description": "Metrics configuration"
              },
              "monitoring": {
                "type": "object",
                "description": "Monitoring configuration"
              },
              "error_handling": {
                "type": "object",
                "description": "Error handling configuration"
              },
              "cache": {
                "type": "object",
                "description": "Phase-specific cache configuration",
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "description": "Whether caching is enabled for this phase"
                  },
                  "directory": {
                    "type": "string",
                    "description": "Phase-specific cache directory path"
                  },
                  "max_size_mb": {
                    "type": "integer",
                    "description": "Maximum cache size in MB for this phase",
                    "minimum": 1
                  },
                  "max_age_days": {
                    "type": "integer",
                    "description": "Maximum age of cache files in days for this phase",
                    "minimum": 1
                  },
                  "cleanup_on_complete": {
                    "type": "boolean",
                    "description": "Whether to clean up cache when phase completes",
                    "default": true
                  }
                }
              }
            }
          }
        }
      }
    }
  }
} 