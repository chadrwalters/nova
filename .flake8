[flake8]
max-line-length = 88  # Match black's default line length
extend-ignore = E203  # Ignore whitespace before ':' (black compatibility)
exclude =
    .git,
    __pycache__,
    .nova,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py: F401
    tests/*: E501
max-complexity = 10
extend-select = B950
ignore =
    # E203: Whitespace before ':' (black handles this)
    E203,
    # W503: Line break before binary operator (black handles this)
    W503,
    # E501: Line too long (black handles this)
    E501
statistics = True
count = True
show-source = True 