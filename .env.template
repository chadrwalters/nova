# Nova Environment Configuration
# Copy this file to .env and update the values

# Base directory for your cloud storage or synced notes directory
SYNC_BASE="${HOME}/Documents/Nova"

# Core directories
NOVA_INPUT_DIR="${SYNC_BASE}/_NovaInput"
NOVA_PROCESSING_DIR="${SYNC_BASE}/_NovaProcessing"
NOVA_OUTPUT_DIR="${SYNC_BASE}/_Nova"

# Template and config directories
NOVA_TEMPLATE_DIR="${NOVA_PROCESSING_DIR}/templates"
NOVA_CONFIG_DIR="${NOVA_PROCESSING_DIR}/config"

# Processing configuration
NOVA_ERROR_TOLERANCE="lenient"  # 'strict' or 'lenient'
NOVA_MAX_FILE_SIZE_MB=50
NOVA_MAX_MEMORY_PERCENT=75
NOVA_CONCURRENT_PROCESSES=4

# System paths
DYLD_LIBRARY_PATH="/usr/local/lib:/opt/homebrew/lib"
