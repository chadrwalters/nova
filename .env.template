# Nova Document Processor Environment Variables
# Copy this file to .env and update values as needed

# Base Paths
NOVA_BASE_DIR="${HOME}/Documents/Nova"
NOVA_TEMP_DIR="/tmp/nova"

# Directory Structure
NOVA_INPUT_DIR="${NOVA_BASE_DIR}/_NovaInput"
NOVA_OUTPUT_DIR="${NOVA_BASE_DIR}/_Nova"
NOVA_CONFIG_DIR="${NOVA_BASE_DIR}/_NovaConfig"
NOVA_PROCESSING_DIR="${NOVA_BASE_DIR}/_NovaProcessing"

# Processing Phase Directories (subdirectories of NOVA_PROCESSING_DIR)
NOVA_PHASE_MARKDOWN_PARSE="${NOVA_PROCESSING_DIR}/01_markdown_parse"
NOVA_PHASE_MARKDOWN_CONSOLIDATE="${NOVA_PROCESSING_DIR}/02_markdown_consolidate"
NOVA_PHASE_PDF_GENERATE="${NOVA_PROCESSING_DIR}/03_pdf_generate"
NOVA_TEMP_DIR="${NOVA_PROCESSING_DIR}/temp"

# Office Document Processing
NOVA_OFFICE_ASSETS_DIR="${NOVA_BASE_DIR}/_NovaAssets"
NOVA_OFFICE_IMAGES_DIR="${NOVA_OFFICE_ASSETS_DIR}/images"
NOVA_OFFICE_TEMP_DIR="${NOVA_PROCESSING_DIR}/temp_office"

# Markdown Processing
NOVA_MARKDOWN_TYPOGRAPHER=true
NOVA_MARKDOWN_LINKIFY=true
NOVA_MARKDOWN_BREAKS=true
NOVA_MARKDOWN_PLUGINS="table,strikethrough,taskList,linkify,image,footnote"

# Processing Configuration
NOVA_ERROR_TOLERANCE=lenient  # 'strict' or 'lenient'
NOVA_MAX_RETRIES=3
NOVA_DELAY_BETWEEN_RETRIES=1
NOVA_MAX_FILE_SIZE=10  # MB
NOVA_MAX_TOTAL_SIZE=50  # MB
NOVA_CONCURRENT_PROCESSES=4

# Output Configuration
NOVA_OUTPUT_FORMAT=pdf
NOVA_OUTPUT_STYLE=github
NOVA_PAGE_SIZE=A4
NOVA_MARGIN="2.5cm 1.5cm"
NOVA_FONT_FAMILY="-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto"
NOVA_FONT_SIZE=11pt
NOVA_LINE_HEIGHT=1.6

# Security Settings
NOVA_ALLOW_EXTERNAL_REFS=false
NOVA_SANITIZE_HTML=true
NOVA_ALLOWED_DOMAINS=""  # Comma-separated list of allowed domains
NOVA_MAX_IMAGE_SIZE=5242880  # 5MB in bytes

# Logging Configuration
NOVA_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
NOVA_LOG_FORMAT=json  # json or text
NOVA_LOG_FILE=""  # Optional: Path to log file
NOVA_FILTER_BINARY=true
NOVA_MAX_BINARY_LENGTH=100

# Resource Management
NOVA_MAX_MEMORY_MB=1024
NOVA_CLEANUP_INTERVAL=300  # seconds

# Development Settings (only for development/testing)
NOVA_DEBUG=false
NOVA_PROFILE=false
NOVA_STRICT_MODE=false

# System paths (if needed)
DYLD_LIBRARY_PATH="/usr/local/lib:/opt/homebrew/lib"

# Markitdown configuration
MARKITDOWN_PRESERVE_IMAGES=true
MARKITDOWN_OCR_ENABLED=true
MARKITDOWN_MAX_IMAGE_SIZE=5242880
